[BASIC]
ignore=mypy.py
good-names=
    T,
    F,
    logger,
    df,
    fn,
    i,
    e,
    x,
    f,
    k,
    v,
    fp,
    bar,
    _IS_INFERRED,
    eq,
    ne,
    gt,
    ge,
    lt,
    le,
    dt,
    tz

[MESSAGES CONTROL]
disable=
    # C0330 conflicts with black: https://github.com/psf/black/issues/48
    C0330,
    R0913,
    duplicate-code,
    too-many-instance-attributes,
    no-else-return,
    inconsistent-return-statements,
    protected-access,
    too-many-ancestors,
    too-many-lines,
    too-few-public-methods,
    line-too-long,
    ungrouped-imports,
    function-redefined,
    arguments-differ,
    no-self-use
